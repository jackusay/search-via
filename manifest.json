{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "searchfor@infonny.com",
      "strict_min_version": "77.0"
    }
  },
  "name": "Search for",
  "short_name": "SearchFor",
  "version": "1.0.1",
  "description": "Context menu on message allowing quick filtering based on email/sender or domain",
  "author": "Richard LAUTH",
  "homepage_url": "http://www.google.com",
  "icons": {
    "48": "skin/SearchFor.png"
  },
  "background": {
	"scripts": ["background.js"]
    },

  "permissions": [
    "storage",
    "messagesRead",
    "menus",
	"accountsRead"
  ],
  "default_locale": "en"
}
